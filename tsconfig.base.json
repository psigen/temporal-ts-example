{
  "extends": "@tsconfig/node16/tsconfig.json",
  "version": "4.4.2",
  "compilerOptions": {
    "lib": ["es2018", "dom"],
    "composite": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@example/activities*": ["packages/activities/src*"],
      "@example/worker*": ["packages/worker/src*"],
      "@example/workflows*": ["packages/workflows/src*"]
    }
  },
  "references": [
    { "path": "packages/activities/tsconfig.json" },
    { "path": "packages/workflows/tsconfig.json" },
    { "path": "packages/worker/tsconfig.json" }
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "__tests__",
    "**/*.test*",
    "**/*.spec*"
  ]
}
