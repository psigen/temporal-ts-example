{
  "extends": "@tsconfig/node16/tsconfig.json",
  "version": "4.4.2",
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["es2018", "dom"],
    "composite": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@example/*": ["packages/*/src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "__tests__",
    "**/*.test*",
    "**/*.spec*"
  ]
}
